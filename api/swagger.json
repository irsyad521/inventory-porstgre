{
    "openapi": "3.0.0",
    "info": {
        "version": "1.0.0",
        "title": "Contoh API",
        "description": "Ini adalah contoh spesifikasi Swagger untuk API saya."
    },
    "paths": {
        "/api/items": {
            "get": {
                "summary": "Mendapatkan semua item",
                "responses": {
                    "200": {
                        "description": "Daftar item berhasil ditemukan",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "id": {
                                                "type": "integer"
                                            },
                                            "name": {
                                                "type": "string"
                                            },
                                            "description": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
